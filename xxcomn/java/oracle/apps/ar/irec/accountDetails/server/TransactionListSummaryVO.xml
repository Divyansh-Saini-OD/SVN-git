   Name="TransactionListSummaryVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.ar.irec.accountDetails.server.TransactionListSummaryVORowImpl"
   ComponentClass="oracle.apps.ar.irec.accountDetails.server.TransactionListSummaryVOImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT customer_id,
       :1 customer_site_use_id,
       currency_code,
       total_due_original,
       total_due_remaining,
       total_discount,       
       TO_CHAR(total_due_original , FND_CURRENCY_CACHE.GET_FORMAT_MASK( currency_code , 30 )) as total_due_original_formatted,
       TO_CHAR(total_due_remaining , FND_CURRENCY_CACHE.GET_FORMAT_MASK( currency_code , 30 )) as total_due_remaining_formatted,      
       TO_CHAR( -total_discount , FND_CURRENCY_CACHE.GET_FORMAT_MASK( currency_code , 30 )) as total_discount_formatted
FROM
(SELECT CUSTOMER_ID, 
        currency_code,
        sum(AMOUNT_DUE_ORIGINAL) total_due_original,
        sum(AMOUNT_DUE_REMAINING) total_due_remaining,
        sum(DISCOUNT_AMOUNT) total_discount
 FROM AR_IREC_PAYMENT_LIST
 WHERE session_id = :2
group by CUSTOMER_ID, currency_code
)
   ]]></SQLQuery>

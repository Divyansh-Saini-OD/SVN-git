<ViewObject
   Name="XXODMICRSrchVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="od.oracle.apps.xxcrm.ar.cusstd.srch.server.XXODMICRSrchVOImpl"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT HCA.cust_account_id
          ,HCA.party_id
          ,HCA.account_number   
          ,HCA.account_name
          ,substr(HCA.orig_system_reference, 0, 8) aops_cust_num
          ,branch.branch_number
          ,ext_bank.bank_account_num
          ,ext_bank.bank_account_name
          ,null as party_site_number
 FROM IBY_EXT_BANK_ACCOUNTS ext_bank, 
      IBY_EXTERNAL_PAYERS_ALL ext_payer,
      hz_cust_accounts hca,
      iby_pmt_instr_uses_all acc_instr,
      iby_ext_bank_branches_v branch
 WHERE branch.branch_party_id = ext_bank.branch_id
   AND acc_instr.ext_pmt_party_id = ext_payer.ext_payer_id
   AND ext_payer.cust_account_id = hca.cust_account_id
   AND ext_bank.ext_bank_account_id = acc_instr.instrument_id
   AND acc_instr.instrument_type='BANKACCOUNT'
   AND acct_site_use_id IS null
   AND (acc_instr.end_date is NULL OR acc_instr.end_date > sysdate)
UNION ALL   
SELECT HCA.cust_account_id
          ,HCA.party_id
          ,HCA.account_number   
          ,HCA.account_name
          ,substr(HCA.orig_system_reference, 0, 8) aops_cust_num
          ,branch.branch_number
          ,ext_bank.bank_account_num
          ,ext_bank.bank_account_name
          ,hps.party_site_number
 FROM IBY_EXT_BANK_ACCOUNTS ext_bank, 
      IBY_EXTERNAL_PAYERS_ALL ext_payer,
      hz_cust_accounts hca,
      iby_pmt_instr_uses_all acc_instr,
      iby_ext_bank_branches_v branch,
      hz_cust_site_uses_all site_uses,
      hz_cust_acct_sites_all sites,
      hz_party_sites hps
 WHERE branch.branch_party_id = ext_bank.branch_id
   AND acc_instr.ext_pmt_party_id = ext_payer.ext_payer_id
   AND ext_payer.cust_account_id = hca.cust_account_id
   AND ext_bank.ext_bank_account_id = acc_instr.instrument_id
   AND acc_instr.instrument_type='BANKACCOUNT'
   AND acct_site_use_id IS NOT null
   AND ext_payer.acct_site_use_id = site_uses.site_use_id
   AND site_uses.cust_acct_site_id = sites.cust_acct_site_id
   AND sites.party_site_id = hps.party_site_id
   AND (acc_instr.end_date is NULL OR acc_instr.end_date > sysdate)
   ]]></SQLQuery>

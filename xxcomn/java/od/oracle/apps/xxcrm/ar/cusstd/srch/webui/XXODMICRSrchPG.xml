<?xml version = '1.0' encoding = 'UTF-8'?>
<page xmlns:jrad="http://xmlns.oracle.com/jrad" xmlns:oa="http://xmlns.oracle.com/oa" xmlns:ui="http://xmlns.oracle.com/uix/ui" version="10.1.3_1312" xml:lang="en-US" xmlns:user="http://xmlns.oracle.com/jrad/user" xmlns="http://xmlns.oracle.com/jrad" file-version="$Header$">
   <content>
      <oa:pageLayout id="PageLayoutRN" amDefName="od.oracle.apps.xxcrm.ar.cusstd.srch.server.XXODMICRSrchAM" windowTitle="Search Customer by MICR Number" controllerClass="od.oracle.apps.xxcrm.ar.cusstd.srch.webui.XXODMICRSrchCO">
         <ui:corporateBranding>
            <oa:image id="corporateBrandingImage" source="/OA_MEDIA/FNDSSCORP.gif"/>
         </ui:corporateBranding>
         <ui:contents>
            <oa:query id="MICRSrchRN" mode="autoCustomizationCriteria" dispSimple="true">
               <oa:simpleSearchPanel>
                  <oa:header text="Simple Search" id="region2">
                     <ui:contents>
                        <oa:messageComponentLayout id="region1">
                           <ui:contents>
                              <oa:messageTextInput id="MICRNumber" prompt="Bank Account Number" required="yes"/>
                           </ui:contents>
                        </oa:messageComponentLayout>
                     </ui:contents>
                  </oa:header>
               </oa:simpleSearchPanel>
               <ui:contents>
                  <oa:advancedTable id="region3" text="Search Results" viewName="XXODMICRSrchVO1">
                     <ui:contents>
                        <oa:column id="AcctNumberCol">
                           <ui:columnHeader>
                              <oa:sortableHeader id="AcctNumberHdr" prompt="Account Number"/>
                           </ui:columnHeader>
                           <ui:contents>
                              <oa:messageStyledText id="AcctNumber" viewAttr="AccountNumber"/>
                           </ui:contents>
                        </oa:column>
                        <oa:column id="PartyNameCol">
                           <ui:columnHeader>
                              <oa:sortableHeader id="PartyNameHdr" prompt="Description"/>
                           </ui:columnHeader>
                           <ui:contents>
                              <oa:link id="PartyName" viewAttr="AccountName">
                                 <ui:primaryClientAction>
                                    <ui:firePartialAction event="viewAccountName">
                                       <ui:parameters>
                                          <ui:parameter key="HzPuiCustAccountId" value="${oa.current.CustAccountId}"/>
                                          <ui:parameter key="HzPuiAccountNumber" value="${oa.current.AccountNumber}"/>
                                          <ui:parameter key="PartyId" value="${oa.current.PartyId}"/>
                                       </ui:parameters>
                                    </ui:firePartialAction>
                                 </ui:primaryClientAction>
                              </oa:link>
                           </ui:contents>
                        </oa:column>
                        <oa:column id="MICRNumberCol">
                           <ui:columnHeader>
                              <oa:sortableHeader id="MICRNbrHdr" prompt="Bank Account Number"/>
                           </ui:columnHeader>
                           <ui:contents>
                              <oa:messageStyledText id="MICRNbrItem" viewAttr="BankAccountNum"/>
                           </ui:contents>
                        </oa:column>
                        <oa:column id="AOPSCustNumCol">
                           <ui:columnHeader>
                              <oa:sortableHeader id="AOPSCustNumHdr" prompt="AOPS Number"/>
                           </ui:columnHeader>
                           <ui:contents>
                              <oa:messageStyledText id="AOPSCustNum" viewAttr="AopsCustNum"/>
                           </ui:contents>
                        </oa:column>
                        <oa:column id="PartySiteNbrCol">
                           <ui:columnHeader>
                              <oa:sortableHeader id="PartySiteNbrHdr" prompt="Party Site Number"/>
                           </ui:columnHeader>
                           <ui:contents>
                              <oa:messageStyledText id="PartySiteNbr" viewAttr="PartySiteNumber"/>
                           </ui:contents>
                        </oa:column>
                     </ui:contents>
                  </oa:advancedTable>
               </ui:contents>
               <oa:simpleSearchMappings>
                  <oa:queryCriteriaMap id="queryCriteriaMap1" criteriaItem="MICRNumber" resultsItem="MICRNbrItem"/>
               </oa:simpleSearchMappings>
            </oa:query>
         </ui:contents>
      </oa:pageLayout>
   </content>
</page>

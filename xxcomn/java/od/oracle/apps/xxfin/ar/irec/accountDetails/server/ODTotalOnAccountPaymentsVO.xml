<ViewObject
   Name="ODTotalOnAccountPaymentsVO"
   Extends="oracle.apps.ar.irec.accountDetails.server.TotalOnAccountPaymentsVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="od.oracle.apps.xxfin.ar.irec.accountDetails.server.ODTotalOnAccountPaymentsVORowImpl"
   ComponentClass="od.oracle.apps.xxfin.ar.irec.accountDetails.server.ODTotalOnAccountPaymentsVOImpl"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select nvl(sum(-app.amount_applied), 0)
from   AR_PAYMENT_SCHEDULES ps, ar_receivable_applications app
where  1=2
and    app.cash_receipt_id = ps.cash_receipt_id
and    ps.customer_id = :1
AND    decode( (:2), NULL, nvl(ps.customer_site_use_id,-10), :3)
         = nvl(ps.customer_site_use_id,-10)
AND    ps.invoice_currency_code = :4
--AND app.cash_receipt_id = ps.cash_receipt_id
--AND nvl( app.confirmed_flag, 'Y' ) = 'Y'
--AND app.status ='ACC'
--AND ps.status = 'OP'
   ]]></SQLQuery>

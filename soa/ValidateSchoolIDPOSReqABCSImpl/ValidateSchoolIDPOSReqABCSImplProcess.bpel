<process name="ValidateSchoolIDPOSReqABCSImplProcess"
               targetNamespace="http://xmlns.oracle.com/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolIDPOSReqABCSImplProcess"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolIDPOSReqABCSImplProcess"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://oracle.com/sca/soapservice/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolID"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolPOSDBAdapter"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/db/BTS/dbo/stp_lookup_bts_id/"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns4="http://xmlns.oracle.com/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolIDPOSFault/V1"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ns7="http://schemas.xmlsoap.org/ws/2003/03/addressing"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ns5="http://xmlns.oracle.com/EnterpriseObjects/Core/EBO/Location/V1"
         xmlns:ns6="http://xmlns.oracle.com/EnterpriseObjects/Core/Common/V2"
         xmlns:ns8="urn:oasis:names:tc:xacml:2.0:context:schema:cd:04"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         xmlns:ns9="http://xmlns.officedepot.com/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolIDPOSRequest/V1"
         xmlns:ns10="http://xmlns.oracle.com/singleString"
         xmlns:ns11="http://xmlns.oracle.com/pcbpel/adapter/jms/BTS/ValidateSchoolIDPOSReqABCSImpl/InsertErrorLoggerJMSProducer"
         xmlns:ns12="http://www.officedepot.com/officedepot/ODComnErrorStructure/1.0"
         xmlns:ns13="http://xmlns.officedepot.com/BTS/ValidateSchoolIDPOSReqABCSImpl/ValidateSchoolIDPOSResponse/V1">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="ValidateSchoolID" partnerLinkType="ns1:ValidateSchoolID" myRole="execute_ptt"/>
    <partnerLink name="ValidateSchoolPOSDBAdapter"
                 partnerLinkType="ns2:ValidateSchoolPOSDBAdapter_plt"
                 partnerRole="ValidateSchoolPOSDBAdapter_role"/>
    <partnerLink name="InsertErrorLoggerJMSProducer"
                 partnerLinkType="ns11:Produce_Message_plt"
                 partnerRole="Produce_Message_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="InvokeValidateSchoolPOSDBAdapter_InputVariable"
              messageType="ns2:args_in_msg"/>
    <variable name="InvokeValidateSchoolPOSDBAdapter_OutputVariable"
              messageType="ns2:args_out_msg"/>
    <variable name="FaultVariable" messageType="ns1:faultMessage"/>
    <variable name="compositeInstanceTitle" type="xsd:string"/>
    <variable name="receiveValidateSchoolID_InputVariable"
              messageType="ns1:requestMessage"/>
    <variable name="InvokeInsertErrorLogger_InputVariable"
              messageType="ns11:Produce_Message_msg"/>
    <variable name="replyValidateSchoolID_OutputVariable"
              messageType="ns1:replyMessage"/>
  </variables>
  <faultHandlers>
    <catch faultName="bpelx:timeout">
      <sequence name="Sequence2">
        <assign name="AssignTimeOutError">
          <copy>
            <from expression="200"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorCode"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:InstanceId"/>
          </copy>
          <copy>
            <from expression="ora:setCompositeInstanceTitle(concat('TimeOut Occured for ID: ',$receiveValidateSchoolID_InputVariable.SchoolID))"/>
            <to variable="compositeInstanceTitle"/>
          </copy>
          <copy>
            <from expression="ora:getFaultAsString()"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorMessage"/>
          </copy>
        </assign>
        <reply name="ReplyTimeOutFault" faultName="ns1:executefault"
               variable="FaultVariable" partnerLink="ValidateSchoolID"
               portType="ns1:execute_ptt" operation="execute"/>
        <terminate name="Terminate2"/>
      </sequence>
    </catch>
    <catch faultName="bpws:selectionFailure">
      <sequence name="Sequence1">
        <assign name="AssignNoDataFoundError">
          <copy>
            <from expression="100"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorCode"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:InstanceId"/>
          </copy>
          <copy>
            <from expression="ora:setCompositeInstanceTitle(concat('NoDataFound for ID: ',$receiveValidateSchoolID_InputVariable.SchoolID))"/>
            <to variable="compositeInstanceTitle"/>
          </copy>
          <copy>
            <from expression="concat('No records exist in the Back to School database for School ID ',$receiveValidateSchoolID_InputVariable.SchoolID)"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorMessage"/>
          </copy>
        </assign>
        <reply name="ReplyNoDataFoundFaults"
               variable="FaultVariable"
               partnerLink="ValidateSchoolID" portType="ns1:execute_ptt"
               operation="execute" faultName="ns1:executefault"/>
        <terminate name="Terminate1"/>
      </sequence>
    </catch>
    <catchAll>
      <sequence name="Sequence3">
        <assign name="AssignCatchAllError">
          <copy>
            <from expression="ora:getFaultAsString()"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorMessage"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:InstanceId"/>
          </copy>
          <copy>
            <from expression="300"/>
            <to variable="FaultVariable" part="faultMessage"
                query="/ns4:ValidateSchoolIDPOSFaultMessage/ns4:ErrorCode"/>
          </copy>
          <copy>
            <from expression="ora:setCompositeInstanceTitle(concat('System error for ID: ',$receiveValidateSchoolID_InputVariable.SchoolID))"/>
            <to variable="compositeInstanceTitle"/>
          </copy>
        </assign>
        <reply name="ReplyCatchAllErrors" faultName="ns1:executefault"
               variable="FaultVariable" partnerLink="ValidateSchoolID"
               portType="ns1:execute_ptt" operation="execute"/>
        <assign name="AssignInsertErrorLogger">
          <copy>
            <from expression="concat(ora:getFaultAsString(),' :')"/>
            <to variable="InvokeInsertErrorLogger_InputVariable" part="body"
                query="/ns12:ODComnErrorStructure/ns12:ODComnErrorStructureList/ns12:ErrorDetails/ns12:ErrorText"/>
          </copy>
          <copy>
            <from expression="concat(ora:getFaultName(),' :')"/>
            <to variable="InvokeInsertErrorLogger_InputVariable" part="body"
                query="/ns12:ODComnErrorStructure/ns12:ODComnErrorStructureList/ns12:ErrorDetails/ns12:ErrorDescription"/>
          </copy>
          <copy>
            <from expression="concat(ora:getCompositeName(),':')"/>
            <to variable="InvokeInsertErrorLogger_InputVariable" part="body"
                query="/ns12:ODComnErrorStructure/ns12:ODComnErrorStructureList/ns12:ProcessInfo/ns12:ProcessName"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="InvokeInsertErrorLogger_InputVariable" part="body"
                query="/ns12:ODComnErrorStructure/ns12:ODComnErrorStructureList/ns12:ErrorDetails/ns12:RootID"/>
          </copy>
          <copy>
            <from expression="concat(xp20:current-dateTime(),' :')"/>
            <to variable="InvokeInsertErrorLogger_InputVariable" part="body"
                query="/ns12:ODComnErrorStructure/ns12:ODComnErrorStructureList/ns12:ErrorDetails/ns12:ErrorDateTime"/>
          </copy>
        </assign>
        <invoke name="InvokeInsertErrorLogger"
                partnerLink="InsertErrorLoggerJMSProducer"
                portType="ns11:Produce_Message_ptt"
                operation="Produce_Message" bpelx:invokeAsDetail="no"
                inputVariable="InvokeInsertErrorLogger_InputVariable"/>
        <terminate name="Terminate3"/>
      </sequence>
    </catchAll>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ValidateSchoolIDPOSReqABCSImplProcess.wsdl) -->
    <receive name="receiveValidateSchoolIDInput" partnerLink="ValidateSchoolID"
             portType="ns1:execute_ptt" operation="execute" createInstance="yes"
             variable="receiveValidateSchoolID_InputVariable"/>

    <!-- Generate reply to synchronous request -->
    <assign name="AssignInputIDtoDBAdapterInput">
      <copy>
        <from expression="ora:setCompositeInstanceTitle(concat('SchoolID=',$receiveValidateSchoolID_InputVariable.SchoolID))"/>
        <to variable="compositeInstanceTitle"/>
      </copy>
      <copy>
        <from variable="receiveValidateSchoolID_InputVariable" part="SchoolID"
              query="/ns9:Request/ns9:SchoolID"/>
        <to variable="InvokeValidateSchoolPOSDBAdapter_InputVariable"
            part="InputParameters" query="/ns3:InputParameters/ns3:bts_id"/>
      </copy>
    </assign>
    <invoke name="InvokeValidateSchoolPOSDBAdapter" bpelx:invokeAsDetail="no"
            inputVariable="InvokeValidateSchoolPOSDBAdapter_InputVariable"
            outputVariable="InvokeValidateSchoolPOSDBAdapter_OutputVariable"
            partnerLink="ValidateSchoolPOSDBAdapter"
            portType="ns2:ValidateSchoolPOSDBAdapter_ptt"
            operation="ValidateSchoolPOSDBAdapter"/>
    <switch name="Switch1">
      <case condition="bpws:getVariableData('InvokeValidateSchoolPOSDBAdapter_OutputVariable','OutputParameters','/ns3:OutputParameters/ns3:RowSet')=''">
        <bpelx:annotation>
          <bpelx:general>
            <bpelx:property name="userLabel">NoDataFound</bpelx:property>
          </bpelx:general>
        </bpelx:annotation>
        <throw name="ThrowNoDataFound" faultName="bpws:selectionFailure"/>
      </case>
      <otherwise>
        <assign name="XformDBAdapterOutputToReplyOut">
          <bpelx:annotation>
            <bpelx:pattern>transformation</bpelx:pattern>
          </bpelx:annotation>
          <copy>
            <from expression="ora:doXSLTransformForDoc('xsl/XformDBAdapterOutputToReplyOut.xsl', $InvokeValidateSchoolPOSDBAdapter_OutputVariable.OutputParameters)"/>
            <to
                part="replyMessage"
                variable="replyValidateSchoolID_OutputVariable"/>
          </copy>
        </assign>
      </otherwise>
    </switch>
    <reply name="replyValidateSchoolIDOutput" partnerLink="ValidateSchoolID"
           portType="ns1:execute_ptt" operation="execute"
           variable="replyValidateSchoolID_OutputVariable"/>
  </sequence>
</process>
<?xml version="1.0" encoding="UTF-8"?>
<process name="POCInboundBPEL" targetNamespace="http://xmlns.oracle.com/POCApplication/POCInbound/POCInboundBPEL" xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/" xmlns:client="http://xmlns.oracle.com/POCApplication/POCInbound/POCInboundBPEL" xmlns:ora="http://schemas.oracle.com/xpath/extension" xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/" xmlns:ns1="http://xmlns.oracle.com/Enterprise/HCM/services" xmlns:bpelx="http://schemas.oracle.com/bpel/extension" xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/http/POCApplication/POCInbound/VendorSyncServicePS" id="BpPrc0">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="pocinboundbpel_client" partnerLinkType="client:POCInboundBPEL" myRole="POCInboundBPELProvider"/>
    <partnerLink name="PSHRWservice" partnerLinkType="ns1:VENDOR_SYNC_PartnerLinkType" partnerRole="VENDOR_SYNC_Provider"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:POCInboundBPELRequestMessage"/>
    <variable name="InvokePSHRWservice_VENDOR_SYNC_InputVar" messageType="ns1:VENDOR_SYNC.VERSION_1"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main" id="BpSeq0">

    <!-- Receive input from requestor. (Note: This maps to operation defined in POCInboundBPEL.wsdl) -->
    <receive name="receiveInput" partnerLink="pocinboundbpel_client" portType="client:POCInboundBPEL" operation="process" variable="inputVariable" createInstance="yes" id="BpRcv0"/>
    <assign name="Transform1" id="BpAss0">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/Transformation_1.xsl', $inputVariable.payload)"/>
        <to variable="InvokePSHRWservice_VENDOR_SYNC_InputVar" part="parameter"/>
      </copy>
    </assign>
    <invoke name="InvokePSHRWservice" inputVariable="InvokePSHRWservice_VENDOR_SYNC_InputVar" partnerLink="PSHRWservice" portType="ns1:VENDOR_SYNC_PortType" operation="VENDOR_SYNC" bpelx:invokeAsDetail="no" id="BpInv0"/>
  </sequence>
</process><!--

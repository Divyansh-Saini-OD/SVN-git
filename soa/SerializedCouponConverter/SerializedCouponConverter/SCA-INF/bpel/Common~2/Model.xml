<?xml version="1.0" encoding="UTF-8"?>
<process name="CommonErrorLoggerBPEL" targetNamespace="http://xmlns.oracle.com/CouponSerialization/SerializedCouponConverter/CommonErrorLoggerBPEL" xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/" xmlns:client="http://xmlns.oracle.com/CouponSerialization/SerializedCouponConverter/CommonErrorLoggerBPEL" xmlns:ora="http://schemas.oracle.com/xpath/extension" xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/" xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/jms/CouponSerialization/SerializedCouponConverter/CommonErrorLoggingService" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:bpelx="http://schemas.oracle.com/bpel/extension" xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20" xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable" xmlns:ns3="http://www.officedepot.com/officedepot/ODComnErrorStructure/1.0" xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ns2="http://www.example.org" xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue" xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath" xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath" xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions" xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk" xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions" xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap" id="BpPrc0">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="commonerrorloggerbpel_client" partnerLinkType="client:CommonErrorLoggerBPEL" myRole="CommonErrorLoggerBPELProvider"/>
    <partnerLink name="CommonErrorLoggingService" partnerLinkType="ns1:Produce_Message_plt" partnerRole="Produce_Message_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:CommonErrorLoggerBPELRequestMessage"/>
    <variable name="invokeCommonErrorLoggerInputData" messageType="ns1:Produce_Message_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main" id="BpSeq0">

    <!-- Receive input from requestor. (Note: This maps to operation defined in CommonErrorLoggerBPEL.wsdl) -->
    <receive name="receiveInput" partnerLink="commonerrorloggerbpel_client" portType="client:CommonErrorLoggerBPEL" operation="process" variable="inputVariable" createInstance="yes" id="BpRcv0"/>
     <sequence name="SequenceSendNotification" id="BpSeq1">
        <scope name="Scope4" id="BpScp0">
          <variables>
            <variable name="messagePayload" type="xsd:string"/>
            <variable name="emailSubject" type="xsd:string"/>
            <variable name="errorText" type="xsd:string"/>
            <variable name="systemName" type="xsd:string"/>
          </variables>
          <sequence name="SequenceSendNotification" id="BpSeq2">
            <assign name="AssignRunTimeErrorRelatedData" id="BpAss0">
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:errorMessage')"/>
              <to variable="emailSubject"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:errorText')"/>
              <to variable="errorText"/>
            </copy>
            <copy>
              <from expression="string(&quot;&quot;)"/>
              <to variable="messagePayload"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('SOA_ADMIN_APP_NAME')"/>
              <to variable="systemName"/>
            </copy>
          </assign>
           <assign name="AssignPopulateCommonErrorLoggingData" id="BpAss1">
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:processName')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:ProcessName"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('ERROR_TYPE')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorType"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('ERROR_SEVERITY')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorSeverity"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('errorText')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorText"/>
            </copy>
            <copy>
              <from expression="ora:getCurrentDateTime()"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorDateTime"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('CATCH_ALL_PROCESS_STEP')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ProcessStep"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:faultName')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorCode"/>
            </copy>
            <copy>
              <from expression="ora:getDomainId()"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:Domain"/>
            </copy>
            <copy>
              <from expression="ora:getCompositeInstanceId()"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageID"/>
            </copy>
            <copy>
              <from expression="ora:getCurrentDateTime()"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageDateTime"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:messageType')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageType"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('MESSAGE_VERSION')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageVersion"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:messageOperation')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageOperation"/>
            </copy>
            <copy>
              <from expression="ora:getPreference('SOURCE_SYSTEM_NAME')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageSourceSystem"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('systemName')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:SystemName"/>
            </copy>
            <copy>
              <from expression="bpws:getVariableData('inputVariable','payload','/ns2:CommonErrorLoggerBPELInput/ns2:errorMessage')"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorDescription"/>
            </copy>
            <copy>
              <from variable="messagePayload"/>
              <to variable="invokeCommonErrorLoggerInputData" part="body" query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessagePayload"/>
            </copy>
          </assign>
            <invoke name="InvokeCommonErrorLoggerToSendErrorData" inputVariable="invokeCommonErrorLoggerInputData" partnerLink="CommonErrorLoggingService" portType="ns1:Produce_Message_ptt" operation="Produce_Message" bpelx:invokeAsDetail="no" id="BpInv0"/>
          </sequence>
        </scope>
      </sequence>
  </sequence>
</process><!--

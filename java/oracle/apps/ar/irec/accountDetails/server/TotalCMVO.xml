   ComponentClass="oracle.apps.ar.irec.accountDetails.server.TotalCMVOImpl" >
   <SQLQuery><![CDATA[
SELECT nvl( SUM ( amount_due_remaining ), 0) AS SUM_AMOUNT_DUE_REMAINING
FROM AR_PAYMENT_SCHEDULES ArPaymentSchedules, ra_customer_trx ct
WHERE class = 'CM'
AND ArPaymentSchedules.customer_trx_id = ct.customer_trx_id
   ]]></SQLQuery>

<ViewObject
   Name="ODDeptVO"
   OrderBy="cost_center_dept"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="od.oracle.apps.xxfin.ar.irec.accountDetails.server.ODDeptVORowImpl"
   ComponentClass="od.oracle.apps.xxfin.ar.irec.accountDetails.server.ODDeptVOImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT VALS.cost_center_dept,SITES.location
FROM (SELECT DISTINCT oha.cost_center_dept, trx.bill_to_site_use_id
        FROM RA_CUSTOMER_TRX_ALL trx
        JOIN XX_OM_HEADER_ATTRIBUTES_V oha										--Refrofit NAIT-37762
		  ON trx.attribute14 = oha.header_id
       WHERE trx.bill_to_customer_id = :1
         AND trx.bill_to_site_use_id = NVL(:2,trx.bill_to_site_use_id)
         AND oha.cost_center_dept IS NOT NULL) VALS
      LEFT OUTER JOIN HZ_CUST_SITE_USES_ALL SITES
        ON SITES.site_use_id=VALS.bill_to_site_use_id
   ]]></SQLQuery>

<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">

<ViewObject
   Name="AllocationQuantityVVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="od.oracle.apps.xxmer.schema.server.AllocationQuantityVVORowImpl"
   ComponentClass="od.oracle.apps.xxmer.schema.server.AllocationQuantityVVOImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT  A.PO_HEADER_ID,
      A.PO_LINE_ID,	
      A.LINE_LOCATION_ID,
      A.QUANTITY ,
	  COALESCE(B.ALLOCATION_QTY,0)	  
	  FROM
(SELECT  
      POLL.PO_HEADER_ID,
      POLL.PO_LINE_ID,	
      POLL.LINE_LOCATION_ID,
      POLL.QUANTITY 
    
	
FROM PO_LINE_LOCATIONS_ALL POLL

WHERE 
	POLL.PO_HEADER_ID = :1
	AND POLL.PO_LINE_ID = :2
	AND POLL.LINE_LOCATION_ID = :3) A,
	(SELECT PO_HEADER_ID,
			PO_LINE_ID,
			LINE_LOCATION_ID,
			ALLOCATION_QTY,	
			ALLOCATION_LINE_ID
		FROM XX_PO_ALLOCATION_LINES
		WHERE ALLOCATION_LINE_ID <> :4) B
	WHERE A.PO_HEADER_ID = B.PO_HEADER_ID(+)
	  AND A.PO_LINE_ID = B.PO_LINE_ID (+)
	  AND A.LINE_LOCATION_ID = B.LINE_LOCATION_ID(+)
   ]]></SQLQuery>

   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select  distinct		
		poh.segment1 as "PO", poh.segment1 as "POValue",  ah.batch_no,ad.po_header_id, ad.PO_LINE_ID, ad.LINE_LOCATION_ID, hr.attribute1 as ship_To, po.SHIP_TO_ORGANIZATION_ID
		,poh.segment1 || '-' || pl.line_num	|| '-' || po.shipment_num as "POLINESHIP"	 
		from xx_po_allocation_header ah
			 ,xx_po_allocation_lines ad			
			 ,po_line_locations_all po
			 ,po_headers_all poh
			 ,HR_ALL_ORGANIZATION_UNITS HR
			 ,po_lines_all pl			
	    where ah.allocation_header_id = ad.ALLOCATION_HEADER_ID		  
		  and po.PO_HEADER_ID = ad.PO_HEADER_ID
		  and poh.PO_HEADER_ID = ad.PO_HEADER_ID
		  and po.PO_LINE_ID = ad.PO_LINE_ID
		  and po.LINE_LOCATION_ID = ad.LINE_LOCATION_ID
		  and po.SHIP_TO_ORGANIZATION_ID = hr.ORGANIZATION_ID
		  and pl.PO_HEADER_ID = ad.PO_HEADER_ID
		  and pl.PO_LINE_ID = ad.PO_LINE_ID
	
union
select '< All POs>' as "PO", ' ' as "POValue",-1,-1,-1,-1,'1',1,'1' from dual
   ]]></SQLQuery>

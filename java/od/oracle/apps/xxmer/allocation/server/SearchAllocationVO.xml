<ViewObject
   Name="SearchAllocationVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="od.oracle.apps.xxmer.allocation.server.SearchAllocationVOImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select distinct 	
		ah.batch_no
		,ah.batch_desc
		,po.segment1 as "PO"
		,i.segment1 as item_id
		,i.description
		,v.vendor_name
		,ah.vendor_id
		,people.full_name
		,ad.ship_to_organization_id				 ,ah.CREATION_DATE	
		
		from xx_po_allocation_header ah
			 ,xx_po_allocation_lines ad
			 ,mtl_system_items_b i
			,mtl_parameters p
			 ,fnd_user u
			 ,po_headers_all po
			 ,po_vendors v
			,PER_ALL_PEOPLE_F people
			 

	    where ah.allocation_header_id = ad.ALLOCATION_HEADER_ID
		  and i.ORGANIZATION_ID = p.MASTER_ORGANIZATION_ID
		  and p.ORGANIZATION_ID = p.MASTER_ORGANIZATION_ID
		  and i.INVENTORY_ITEM_ID = ah.ITEM_ID
		   and u.user_id = ah.AGENT_ID 
		   and u.employee_id = people.person_id
		  and po.PO_HEADER_ID = ad.PO_HEADER_ID
		  and v.vendor_id = ah.VENDOR_ID
   ]]></SQLQuery>

   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT HCA.cust_account_id
          ,HCA.party_id
          ,HCA.account_number   
          ,HCA.account_name
          ,substrb(HCA.orig_system_reference, 0, 8) aops_cust_num
          ,substrb(hp.orig_system_reference,1,7) OMX_Number
          ,hp.orig_system_reference
 FROM hz_cust_accounts hca,
      hz_parties hp
 WHERE HCA.party_id = hp.party_id
 AND   (hp.orig_system_reference like :1 || '-%')
   ]]></SQLQuery>

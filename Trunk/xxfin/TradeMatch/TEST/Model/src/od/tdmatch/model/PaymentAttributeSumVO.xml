<?xml version="1.0" encoding="windows-1252" ?>
<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="PaymentAttributeSumVO"
  Version="12.2.1.12.24"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  RowClass="od.tdmatch.model.PaymentAttributeSumVORowImpl"
  ComponentClass="od.tdmatch.model.PaymentAttributeSumVOImpl"
  PageIterMode="Full">
  <DesignTime>
    <Attr Name="_codeGenFlag2" Value="Coll"/>
    <Attr Name="_isExpertMode" Value="true"/>
    <Attr Name="_isCodegen" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="od.tdmatch.model.PaymentAttributeSumVO_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <SQLQuery><![CDATA[SELECT                
       sum(ai.invoice_amount) invoice_amount                
                
  FROM  ap_terms e                
       ,po_headers_all ph                
       ,ap_payment_schedules_all py                
       ,ap_supplier_sites_all b                
       ,ap_suppliers a                
       ,ap_invoices_all ai                
 WHERE 1=1                
   AND a.vendor_id=ai.vendor_id                
   AND b.vendor_id=a.vendor_id                
   AND b.vendor_site_id=ai.vendor_site_id                
   AND py.invoice_id=ai.invoice_id                
   AND e.term_id=ai.terms_id                
   AND ph.po_header_id=NVL(ai.po_header_id,ai.quick_po_header_id)                  
           
   AND ai.payment_status_flag IN ('N','P')                
   AND (NVL(py.amount_remaining,0) * NVL(ai.exchange_rate,1)) != 0                   
   AND   'APPROVED'=AP_INVOICES_PKG.GET_APPROVAL_STATUS(ai.invoice_id,                 
                                           ai.invoice_amount,                
                                           ai.payment_status_flag,                
                                           ai.invoice_type_lookup_code                
                                          ) 
                                          and ai.creation_date>sysdate-100]]></SQLQuery>
  <ViewAttribute
    Name="InvoiceAmount"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="oracle.jbo.domain.Number"
    ColumnType="NUMBER"
    AliasName="INVOICE_AMOUNT"
    Expression="INVOICE_AMOUNT"
    SQLType="NUMERIC"/>
  <AttrArray Name="KeyAttributes">
    <Item Value="InvoiceAmount"/>
  </AttrArray>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="od.tdmatch.model.ModelBundle"/>
  </ResourceBundle>
</ViewObject>

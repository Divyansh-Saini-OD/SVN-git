<process name="ProcessPOFile"
               targetNamespace="http://xmlns.oracle.com/ProcessPOFile/ProcessPOFile"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/ProcessPOFile/ProcessPOFile"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/ProcessFile/ProcessFile"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/file/ProcessPOFile/ReadPurchaseOrderFile"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns3="http://TargetNamespace.com/FileSyncRead">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="ReceivePOFileInformation"
                 partnerLinkType="ns1:ProcessFile"
                 myRole="ProcessInvoiceFileProvider"/>
    <partnerLink name="ReadPurchaseOrderFile"
                 partnerLinkType="ns2:SynchRead_plt"
                 partnerRole="SynchRead_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="InvokeReadPurchaseOrder_SynchRead_InputVariable"
              messageType="ns2:Empty_msg"/>
    <variable name="InvokeReadPurchaseOrder_SynchRead_OutputVariable"
              messageType="ns2:SynchRead_msg"/>
    <variable name="InputVariable" messageType="ns1:ProcessFileRequestMessage"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ProcessPOFile.wsdl) -->
    <receive name="receiveInput" partnerLink="ReceivePOFileInformation"
             portType="ns1:ProcessFile" operation="processFile"
             variable="InputVariable" createInstance="yes"/>
    <invoke name="InvokeReadPurchaseOrder"
            inputVariable="InvokeReadPurchaseOrder_SynchRead_InputVariable"
            outputVariable="InvokeReadPurchaseOrder_SynchRead_OutputVariable"
            partnerLink="ReadPurchaseOrderFile" portType="ns2:SynchRead_ptt"
            operation="SynchRead" bpelx:invokeAsDetail="no">
      <bpelx:inputProperty name="jca.file.FileName" variable="InputVariable"
                           part="payload" query="/ns3:FilePath/ns3:fileName"/>
      <bpelx:inputProperty name="jca.file.Directory" variable="InputVariable"
                           part="payload" query="/ns3:FilePath/ns3:directory"/>
    </invoke>
  </sequence>
</process>
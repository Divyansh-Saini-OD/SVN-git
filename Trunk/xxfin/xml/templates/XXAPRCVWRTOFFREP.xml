<?xml version="1.0" encoding="UTF-8"?>
<dataTemplate name="XXAPRCVWRTOFFREP" defaultPackage="" dataSourceRef="">	
	<parameters>
		<parameter name="P_REQUEST_ID" dataType="Number" defaultValue=""/>
		<parameter name="P_RUN_MODE" dataType="character" defaultValue=""/>		
	</parameters>
<dataQuery>
<sqlStatement name="Q_DATA">
<![CDATA[ 
SELECT a1.vendor_no
,a1.vendor_name
,a1.PO_Number
,(select a.release_num 
	from po_releases_all a,
	po_distributions_all b
	where a.po_release_id = b.po_release_id
	and b.po_distribution_id = a1.PO_Distribution_ID) PO_Release
,a1.PO_Line_num
,a1.PO_Shipment_no
,a1.PO_Dist_num
,a1.PO_Distribution_ID
,a1.PO_Balance
,a1.AP_Balance
,a1.WO_Balance
,(a1.PO_Balance+a1.AP_Balance) Total_Balance
,a1.Age_in_Days
,a1.Accrual_Acct
,a1.Destination_type
,a1.Item
from xx_ap_rcvwrite_off_stg a1
where a1.request_id = :P_REQUEST_ID
and a1.process_flag = 7
order by a1.vendor_no, a1.vendor_name, a1.PO_Number, a1.PO_Line_num, a1.PO_Dist_num
]]>
</sqlStatement>
</dataQuery>
<dataStructure>
<group name="G_DATA" source="Q_DATA" groupFilter="">
	 <element name="vendor_no" value="vendor_no"/>
     <element name="vendor_name" value="vendor_name" function=""/>
	 <element name="PO_Number" value="PO_Number" function=""/> 
	 <element name="PO_Release" value="PO_Release" function=""/> 
     <element name="PO_Line_num" value="PO_Line_num" function=""/>
	 <element name="PO_Shipment_no" value="PO_Shipment_no" function=""/>
	 <element name="PO_Dist_num" value="PO_Dist_num" function=""/>
	 <element name="PO_Distribution_ID" value="PO_Distribution_ID" function=""/>
	 <element name="PO_Balance" value="PO_Balance" function=""/>
	 <element name="AP_Balance" value="AP_Balance" function=""/>
	 <element name="WO_Balance" value="WO_Balance" function=""/>
	 <element name="Total_Balance" value="Total_Balance" function=""/>
	 <element name="Age_in_Days" value="Age_in_Days" function=""/>
	 <element name="Accrual_Acct" value="Accrual_Acct" function=""/>
	 <element name="Destination_type" value="Destination_type" function=""/>
	 <element name="Item" value="Item" function=""/>
</group>
</dataStructure>
</dataTemplate>
































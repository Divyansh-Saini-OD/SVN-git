  </properties>
  <parameters>
  <parameter name="RPT_REQUEST_ID" datatype="NUMBER(20)" />
  </parameters>

  <dataQuery>
  <sqlStatement name="Q_ZERO_DOLLAR">
  <![CDATA[ 
        SELECT CUSTOMER_NAME ,
			   CUSTOMER_NUMBER,
			   RECEIPT_NUMBER ,
			   to_char(RECEIPT_DATE,'DD-MON-YYYY') RECEIPT_DATE ,
			   RECEIPT_AMOUNT,
			   to_char(APPLIED_TRX_NUMBER) APPLIED_TRX_NUMBER
         FROM XX_AR_ZERO_DOLLAR_APP
	 WHERE REQUEST_ID = :RPT_REQUEST_ID
  ]]> 
  </sqlStatement>
  </dataQuery>


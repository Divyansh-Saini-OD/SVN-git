UPDATE XXFIN.XX_AR_PAYMENTS_INTERFACE
   SET CREATION_DATE = NVL(CREATION_DATE,SYSDATE),
       CREATED_BY = NVL(CREATED_BY,-1),
       LAST_UPDATE_DATE = NVL(LAST_UPDATE_DATE,SYSDATE),
       LAST_UPDATED_BY = NVL(LAST_UPDATED_BY,-1);
       
ALTER TABLE XXFIN.XX_AR_PAYMENTS_INTERFACE MODIFY
( CREATION_DATE           DATE        DEFAULT SYSDATE  NOT NULL,
  CREATED_BY              NUMBER      DEFAULT -1       NOT NULL,
  LAST_UPDATE_DATE        DATE        DEFAULT SYSDATE  NOT NULL,
  LAST_UPDATED_BY         NUMBER      DEFAULT -1       NOT NULL );
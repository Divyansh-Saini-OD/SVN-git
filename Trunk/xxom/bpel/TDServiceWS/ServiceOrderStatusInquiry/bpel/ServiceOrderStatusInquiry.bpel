<process name="ServiceOrderStatusInquiry"
         targetNamespace="http://xmlns.oracle.com/ServiceOrderStatusInquiry"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ns1="http://gsidev01/ServiceStatusInquiryWS.wsdl/types/"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/EbsServiceOrderStatus/"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:client="http://xmlns.oracle.com/ServiceOrderStatusInquiry"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:orcl="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc">
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="client"
                 partnerLinkType="client:ServiceOrderStatusInquiry"
                 myRole="ServiceOrderStatusInquiryProvider"/>
    <partnerLink name="EbsServiceOrderStatus"
                 partnerRole="EbsServiceOrderStatus_role"
                 partnerLinkType="ns2:EbsServiceOrderStatus_plt"/>
  </partnerLinks>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable"
              messageType="client:ServiceOrderStatusInquiryRequestMessage"/>
    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable"
              messageType="client:ServiceOrderStatusInquiryResponseMessage"/>
    <variable name="InvokeEbsSO_InputVariable" messageType="ns2:args_in_msg"/>
    <variable name="InvokeEbsSO_OutputVariable" messageType="ns2:args_out_msg"/>
  </variables>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">
    <!-- Receive input from requestor. (Note: This maps to operation defined in ServiceOrderStatusInquiry.wsdl) -->
    <receive name="receiveSOdetails" partnerLink="client"
             portType="client:ServiceOrderStatusInquiry" operation="process"
             variable="inputVariable" createInstance="yes"/>
    <!-- Generate reply to synchronous request -->
    <assign name="TransformEbsSO">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:processXSLT('TransformEbsSO.xsl',bpws:getVariableData('inputVariable','payload'))"/>
        <to variable="InvokeEbsSO_InputVariable" part="InputParameters"/>
      </copy>
    </assign>
    <invoke name="InvokeEbsSO" partnerLink="EbsServiceOrderStatus"
            portType="ns2:EbsServiceOrderStatus_ptt"
            operation="EbsServiceOrderStatus"
            inputVariable="InvokeEbsSO_InputVariable"
            outputVariable="InvokeEbsSO_OutputVariable"/>
    <assign name="TransformSOStatus">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:processXSLT('TransformSOStatus.xsl',bpws:getVariableData('InvokeEbsSO_OutputVariable','OutputParameters'))"/>
        <to variable="outputVariable" part="payload"/>
      </copy>
    </assign>
    <reply name="replyOutput" partnerLink="client"
           portType="client:ServiceOrderStatusInquiry" operation="process"
           variable="outputVariable"/>
  </sequence>
</process>
declare
ct number;
sql_stmt varchar2 (1000);
begin
  sql_stmt := 'drop INDEX XXCOMN.XX_COM_SYSTEM_CODES_CONV_U1';
  select count(1) into ct
  from all_indexes where index_name = 'XX_COM_SYSTEM_CODES_CONV_U1';
  if (ct >= 1) then
      execute immediate sql_stmt;
  end if;
end;

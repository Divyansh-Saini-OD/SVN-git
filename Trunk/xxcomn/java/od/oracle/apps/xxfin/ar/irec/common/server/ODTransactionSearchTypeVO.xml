<ViewObject
   Name="ODTransactionSearchTypeVO"
   Extends="oracle.apps.ar.irec.common.server.TransactionSearchTypeVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="od.oracle.apps.xxfin.ar.irec.common.server.ODTransactionSearchTypeVOImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   FetchMode="FETCH_AS_NEEDED"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select search_types.lookup_code,
nvl(softlabels.meaning,search_types.meaning) meaning  
from 
(
SELECT lookup_code, meaning
FROM ar_lookups
WHERE
    lookup_type = 'ARI_CUSTOMER_SEARCH_TYPE'
    and (
     ENABLED_FLAG = 'Y'
    and TRUNC(SYSDATE) BETWEEN
        TRUNC(NVL(start_date_active,SYSDATE))
           AND 
        TRUNC(NVL(end_date_active,SYSDATE)) 
    )
AND ( :1 is null 
    OR
    ( :2 is not null 
    AND 
      nvl(externally_visible_flag,'Y') <> 'N' )
)
) search_types
 left join
  (select * from table(XX_IREC_SEARCH_PKG.SOFT_HEADERS_SEARCH_TBL)) softlabels  
 on search_types.lookup_code=softlabels.lookup_code
 where softlabels.lookup_code IS NULL OR softlabels.meaning IS NOT NULL
   ]]></SQLQuery>
   <DesignTime>
      <Attr Name="_version" Value="9.0.3.11.95" />
      <Attr Name="_CodeGenFlagNew" Value="36" />
   </DesignTime>
   <ViewAttribute
      Name="LookupCode"
      IsPersistent="false"
      Precision="30"
      Type="java.lang.String"
      AliasName="LOOKUP_CODE"
      ColumnType="VARCHAR2"
      Expression="LOOKUP_CODE"
      SQLType="VARCHAR" >
      <DesignTime>
         <Attr Name="_DisplaySize" Value="30" />
      </DesignTime>
   </ViewAttribute>
   <ViewAttribute
      Name="Meaning"
      IsPersistent="false"
      Precision="80"

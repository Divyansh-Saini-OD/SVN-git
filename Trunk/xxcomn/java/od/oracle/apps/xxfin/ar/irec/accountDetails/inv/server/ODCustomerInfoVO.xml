   <SQLQuery><![CDATA[
SELECT
hca.customer_class_code              customer_class_code,
hcs.location                         location,
hca.account_number                   customer_number,
hp.party_name                        customer_name,
hcs.tax_reference                    site_tax_reference,
hp.tax_reference                     cust_tax_reference,
hl.address1                         address1,
hl.address2                         address2,
hl.address3                         address3,
hl.address4                         address4,
hl.city                             city,
hl.county                           county,
hl.state                            state,
hl.province                         province,
hl.postal_code                      postal_code,
hl.country                          country,
decode(hl.country, null, null,
       nvl(sp.default_country,'xxxxxx'),
       decode(:1, null, decode( sp.print_home_country_flag,'Y',dft.territory_short_name,null), ft.territory_short_name),
       NVL(ft.territory_short_name, hl.country))
                                        country_name,
/* BUg # 2863594 - hikumar */
decode(hl.city,null,null,hl.city||', ') ||
decode(hl.state,null,null,hl.state||' ')||
decode(hl.province,null,null,hl.province||' ')||
decode(hl.postal_code,null,null,hl.postal_code||' ') ||
decode(hl.country, null, null,
       nvl(sp.default_country,'xxxxxx'),
       decode( sp.print_home_country_flag,'Y',dft.territory_short_name,null),
       NVL(ft.territory_short_name, hl.country))
                                     combined_address,
/* Bug # 2863594  - hikumar */
hp.jgzz_fiscal_code                 jgzz_fiscal_code,
hca.cust_account_id,
hcs.site_use_id,
ft.territory_code,
hps.party_site_id,
hca.ORIG_SYSTEM_REFERENCE ORIGSYSTEMREFERENCE  /*Included for E1356 - CustomerInfoVO*/
FROM
hz_locations           hl,
hz_cust_accounts       hca,
hz_parties             hp,
hz_cust_site_uses      hcs,
hz_cust_acct_sites     hcas,
hz_party_sites         hps,
ar_system_parameters   sp,
fnd_territories_vl     ft,
fnd_territories_vl     dft
WHERE
hca.cust_account_id     = :2 AND
hca.party_id            = hp.party_id AND
hcs.site_use_id         = :3 AND
hcas.cust_acct_site_id  = hcs.cust_acct_site_id AND
hcas.party_site_id      = hps.party_site_id AND
hps.location_id         = hl.location_id AND
nvl( :4 ,hl.country)  = ft.territory_code(+) AND
nvl(sp.default_country,'US')        = dft.territory_code
and hcas.org_id = sp.org_id
and hcs.org_id = sp.org_id
   ]]></SQLQuery>

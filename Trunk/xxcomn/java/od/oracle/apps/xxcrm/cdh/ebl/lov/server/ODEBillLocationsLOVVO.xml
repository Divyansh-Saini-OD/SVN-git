<ViewObject
   Name="ODEBillLocationsLOVVO"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="oracle.apps.fnd.framework.server.OAViewObjectImpl"
   MsgBundleClass="oracle.jbo.common.JboResourceBundle"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT  arp_addr_pkg.format_address( HL.address_style ,HL.address1
                                    , HL.address2 ,HL.address3
                                    , HL.address4 ,HL.city
                                    , HL.county ,HL.state
                                    , HL.province ,HL.postal_code
                                    , HTV.territory_short_name ) ADDRESS
       , HCSU.site_use_code
       , HCAS.cust_account_id 
       , HCAS.cust_acct_site_id
       , substr(HCAS.orig_system_reference, instr(HCAS.orig_system_reference,'-') + 1, 5)  sequence_number     
    FROM fnd_territories_vl HTV
       , hz_cust_acct_sites HCAS
       , hz_party_sites HPS
       , hz_locations HL    
       , hz_cust_site_uses HCSU
    WHERE HL.country = HTV.territory_code(+) 
      AND HCAS.party_site_id = HPS.party_site_id 
      AND HL.location_id = HPS.location_id 
      AND HCAS.cust_acct_site_id = HCSU.cust_acct_site_id
      AND HCAS.status = 'A'
   ]]></SQLQuery>

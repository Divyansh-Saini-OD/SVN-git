<ViewObject
   Name="ODEBillConfigHdrFieldNamesPVO"
   OrderBy="FIELD_NAME ASC"
   BindingStyle="Oracle"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="oracle.apps.fnd.framework.server.OAViewObjectImpl"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT val.source_value2 field_name,
       val.source_value1 field_id, 
      val.target_value1 data_type,
       val.target_value2 data_format,
	   null cust_doc_id,
	   1 TranslationField
  FROM xx_fin_translatedefinition def, 
       xx_fin_translatevalues val
 WHERE def.translate_id = val.translate_id
   AND def.translation_name = 'XX_CDH_EBL_TXT_HDR_FIELDS'
   AND val.enabled_flag = 'Y'
   AND val.source_value8 = 'Y'
   AND val.source_value1 IS NOT NULL
   AND val.source_value2 IS NOT NULL
  UNION
SELECT 
  xceth.label field_name,
  CAST (xceth.FIELD_ID AS VARCHAR2(240)) field_id,
   NULL data_type,
  NULL data_format,
  xceth.cust_doc_id,
  0 TranslationField
FROM XX_CDH_EBL_TEMPL_HDR_TXT xceth
WHERE not exists (SELECT 1
                    FROM xx_fin_translatedefinition def, 
                         xx_fin_translatevalues val
                   WHERE def.translate_id = val.translate_id
                     AND def.translation_name = 'XX_CDH_EBL_TXT_HDR_FIELDS'
                     AND val.enabled_flag = 'Y'
                     AND val.source_value1 IS NOT NULL
                     AND val.source_value2 IS NOT NULL
                     and val.source_value1=xceth.FIELD_ID   
                  )
and label is not null
and exists
  (select 1 from XX_CDH_EBL_CONCAT_FIELDS_TXT xcect
    where xcect.conc_field_id =xceth.field_id
    and xcect.cust_doc_id=xceth.cust_doc_id
    and xcect.tab='H')
   ]]></SQLQuery>

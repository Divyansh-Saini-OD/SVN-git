<process name="I0227_LegacyPOS_EBS_In"
         targetNamespace="http://xmlns.oracle.com/I0227_LegacyPOS_EBS_In"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ns4="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ns7="http://xmlns.oracle.com/pcbpel/adapter/db/APPS/XX_BPEL_SVCLEGACYPOSREAD/XX_OM_LEG_POS_SHIP_CONF_PKG-24O/"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         xmlns:ns5="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:client="http://xmlns.oracle.com/I0227_LegacyPOS_EBS_In"
         xmlns:ns6="http://www.oracle.com/XSL/Transform/java/oracle.tip.esb.server.headers.ESBHeaderFunctions"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:ns1="http://www.thiscompany.com/ns/sales"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/db/APPS/XX_BPEL_SVCLEGACYPOSREAD/XX_ONT_LEG_POS_SHIP_CONF_PKG-24/"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/svcLegacyPOSRead/"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:orcl="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc">
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <partnerLinks>
        <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
        <partnerLink name="client"
                     partnerLinkType="client:I0227_LegacyPOS_EBS_In"
                     myRole="I0227_LegacyPOS_EBS_InProvider"
                     partnerRole="I0227_LegacyPOS_EBS_InRequester"/>
        <partnerLink name="plLegacyPOSRead" partnerRole="svcLegacyPOSRead_role"
                     partnerLinkType="ns2:svcLegacyPOSRead_plt"/>
    </partnerLinks>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable"
                  messageType="client:I0227_LegacyPOS_EBS_InRequestMessage"/>
        <!-- Reference to the message that will be sent back to the requester during callback -->
        <variable name="outputVariable"
                  messageType="client:I0227_LegacyPOS_EBS_InResponseMessage"/>
        <variable name="invkLegacyPOSRead_In" messageType="ns2:args_in_msg"/>
        <variable name="invkLegacyPOSRead_Out" messageType="ns2:args_out_msg"/>
        <variable name="asnOutVar" messageType="ns2:args_out_msg"/>
        <variable name="LegAckVar" messageType="client:LegAckMsg"/>
        <variable name="LegErrVar" messageType="client:LegErrMsg"/>
    </variables>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
        <!-- Receive input from requestor. (Note: This maps to operation defined in I0227_LegacyPOS_EBS_In.wsdl) -->
        <receive name="receiveInput" partnerLink="client"
                 portType="client:I0227_LegacyPOS_EBS_In" operation="initiate"
                 variable="inputVariable" createInstance="yes"/>
        <!-- 
          Asynchronous callback to the requester. (Note: the callback location and correlation id is transparently handled using WS-addressing.)
        -->
        <assign name="xformLegacyPosMsg">
            <bpelx:annotation>
                <bpelx:pattern>transformation</bpelx:pattern>
            </bpelx:annotation>
            <copy>
                <from expression="ora:processXSLT('xformLegacyPosMsg.xsl',bpws:getVariableData('inputVariable','payload'))"/>
                <to variable="invkLegacyPOSRead_In" part="InputParameters"/>
            </copy>
        </assign>
        <invoke name="invkLegacyPOSRead" partnerLink="plLegacyPOSRead"
                portType="ns2:svcLegacyPOSRead_ptt" operation="svcLegacyPOSRead"
                inputVariable="invkLegacyPOSRead_In"
                outputVariable="invkLegacyPOSRead_Out"/>
        <assign name="asnDbOutStr">
            <copy>
                <from variable="invkLegacyPOSRead_Out" part="OutputParameters"/>
                <to variable="asnOutVar" part="OutputParameters"/>
            </copy>
        </assign>
        <switch name="swRetStatus">
            <case condition="bpws:getVariableData('invkLegacyPOSRead_Out','OutputParameters','/ns7:OutputParameters/X_STATUS')='FAILURE'">
                <bpelx:annotation>
                    <bpelx:pattern>LegErrPos</bpelx:pattern>
                </bpelx:annotation>
                <sequence name="Sequence_2">
                    <assign name="xformLegErrPos">
                        <bpelx:annotation>
                            <bpelx:pattern>transformation</bpelx:pattern>
                        </bpelx:annotation>
                        <copy>
                            <from expression="ora:processXSLT('xformLegErrPos.xsl',bpws:getVariableData('invkLegacyPOSRead_Out','OutputParameters'))"/>
                            <to variable="LegErrVar" part="LegErrMsg"/>
                        </copy>
                    </assign>
                    <assign name="asnLegErrPos">
                        <copy>
                            <from expression="ora:getProcessId()"/>
                            <to variable="LegErrVar" part="LegErrMsg"
                                query="/ns1:Error/BPELProcessID"/>
                        </copy>
                        <copy>
                            <from expression="ora:getInstanceId()"/>
                            <to variable="LegErrVar" part="LegErrMsg"
                                query="/ns1:Error/TransactionId"/>
                        </copy>
                    </assign>
                    <invoke name="invkLegErrPos" partnerLink="client"
                            portType="client:I0227_LegacyPOS_EBS_InCallback"
                            operation="onErr" inputVariable="LegErrVar"/>
                </sequence>
            </case>
            <case condition="bpws:getVariableData('invkLegacyPOSRead_Out','OutputParameters','/ns7:OutputParameters/X_STATUS')='SUCCESS'">
                <bpelx:annotation>
                    <bpelx:pattern>LegAckPos</bpelx:pattern>
                </bpelx:annotation>
                <sequence name="Sequence_1">
                    <assign name="xformLegAckPos">
                        <bpelx:annotation>
                            <bpelx:pattern>transformation</bpelx:pattern>
                        </bpelx:annotation>
                        <copy>
                            <from expression="ora:processXSLT('xformLegAckPos.xsl',bpws:getVariableData('invkLegacyPOSRead_Out','OutputParameters'))"/>
                            <to variable="LegAckVar" part="LegAckMsg"/>
                        </copy>
                    </assign>
                    <invoke name="invkLegAckPos" partnerLink="client"
                            portType="client:I0227_LegacyPOS_EBS_InCallback"
                            operation="onAck" inputVariable="LegAckVar"/>
                </sequence>
            </case>
        </switch>
    </sequence>
</process>
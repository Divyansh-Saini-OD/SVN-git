<process name="CreateOrderProcess"
         targetNamespace="http://xmlns.oracle.com/CreateOrderProcess"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ns4="http://xmlns.oracle.com/SendSalesOrderInfo"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/apps/BusinessEventRead/"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         xmlns:ns3="http://xmlns.oracle.com/xdb/APPS"
         xmlns:ns2="http://xmlns.oracle.com/SendDBNowDocsData"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:client="http://xmlns.oracle.com/CreateOrderProcess"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:orcl="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc">
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <partnerLinks>
    <partnerLink myRole="DEQUEUE_role" name="BusinessEventRead"
                 partnerLinkType="ns1:DEQUEUE_plt"/>
    <partnerLink name="SendSalesOrderInfo"
                 partnerRole="SendSalesOrderInfoProvider"
                 partnerLinkType="ns4:SendSalesOrderInfo"/>
  </partnerLinks>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <variable name="ReceiveBusinessEventIn" messageType="ns1:WF_EVENT_T_msg"/>
    <variable name="InvokeOrderInfoProcessIn"
              messageType="ns4:SendSalesOrderInfoRequestMessage"/>
    <variable name="InvokeOrderInfoProcessOut"
              messageType="ns4:SendSalesOrderInfoResponseMessage"/>
    <variable name="ActivityNameVar" type="xsd:string"/>
  </variables>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">
    <receive name="ReceiveBusinessEvent" partnerLink="BusinessEventRead"
             portType="ns1:DEQUEUE_ptt" operation="DEQUEUE"
             variable="ReceiveBusinessEventIn" createInstance="yes">
      <bpelx:annotation>
        <bpelx:documentation>Listens for the business event and receives the
                             event key</bpelx:documentation>
      </bpelx:annotation>
    </receive>
    <assign name="AssignParentLineID">
      <bpelx:annotation>
        <bpelx:documentation>Assigns the parent line ID value</bpelx:documentation>
      </bpelx:annotation>
      <copy>
        <from variable="ReceiveBusinessEventIn" part="WF_EVENT_T"
              query="/ns3:WF_EVENT_T/EVENT_KEY"/>
        <to variable="InvokeOrderInfoProcessIn" part="payload"
            query="/ns4:SendSalesOrderInfoProcessRequest/ns4:input"/>
      </copy>
      <copy>
        <from expression="'Invoking the Sales order info'"/>
        <to variable="ActivityNameVar"/>
      </copy>
    </assign>
    <invoke name="InvokeOrderInfoProcess" partnerLink="SendSalesOrderInfo"
            operation="process" portType="ns4:SendSalesOrderInfo"
            inputVariable="InvokeOrderInfoProcessIn"
            outputVariable="InvokeOrderInfoProcessOut">
      <bpelx:annotation>
        <bpelx:documentation>Invokes sub process to send sales order info</bpelx:documentation>
      </bpelx:annotation>
    </invoke>
  </sequence>
</process>
<?xml version="1.0" encoding="windows-1252" ?>
<project default="compile" basedir=".">
    <target name="compile">

        <echo>
--------------------------------------------------------------
| Compiling bpel process ${process.name}, revision ${rev}
--------------------------------------------------------------
        </echo>

        <bpelc rev="${rev}" input="${process.dir}/bpel/bpel.xml" out="${process.dir}/output" home="${bpel.home}">
               <customize> 
                  <partnerLinkBinding name="ODErrorLogger">
                     <property name="wsdlLocation">http://${oderrorlogger.hostname}:${oderrorlogger.port}/orabpel/${oderrorlogger.domain}/ODErrorLogger/ODErrorLogger?wsdl</property>
                    <property name="retryInterval">${db.retryInterval}</property>
                    <property name="retryMaxCount">${db.retryMaxCount}</property>
                    <property name="timeout">${db.timeout}</property>
                  </partnerLinkBinding>
                  <partnerLinkBinding name="EnqueueMessage">
                    <property name="retryInterval">${db.retryInterval}</property>
                    <property name="retryMaxCount">${db.retryMaxCount}</property>
                    <property name="timeout">${db.timeout}</property>
                  </partnerLinkBinding>
                  <partnerLinkBinding name="DBSuccessAck">
                    <property name="retryInterval">${db.retryInterval}</property>
                    <property name="retryMaxCount">${db.retryMaxCount}</property>
                    <property name="timeout">${db.timeout}</property>
                  </partnerLinkBinding>
            </customize>
        </bpelc>
    </target>
</project>
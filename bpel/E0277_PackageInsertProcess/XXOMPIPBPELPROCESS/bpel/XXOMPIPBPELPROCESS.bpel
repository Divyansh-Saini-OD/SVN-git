<process name="XXOMPIPBPELPROCESS"
         targetNamespace="http://xmlns.oracle.com/XXOMPIPBPELPROCESS"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/DBPIPItemStatus/"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/APPS/XX_OM_EVALUATE_PIP_PKG/DETERMINE_PIP_ITEMS/"
         xmlns:client="http://xmlns.oracle.com/XXOMPIPBPELPROCESS"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:orcl="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc">
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="client" partnerLinkType="client:XXOMPIPBPELPROCESS"
                 myRole="E0277_SAS_EBS_INProvider"/>
    <partnerLink name="DBPIPItemStatus" partnerRole="DBPIPItemStatus_role"
                 partnerLinkType="ns1:DBPIPItemStatus_plt"/>
  </partnerLinks>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable"
              messageType="client:E0277_SAS_EBS_INRequestMessage"/>
    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable"
              messageType="client:E0277_SAS_EBS_INResponseMessage"/>
    <variable name="GetPIPStatus_DBPIPItemStatus_InputVariable"
              messageType="ns1:args_in_msg"/>
    <variable name="GetPIPStatus_DBPIPItemStatus_OutputVariable"
              messageType="ns1:args_out_msg"/>
    <variable name="remoteFaultVar" messageType="bpelx:RuntimeFaultMessage"/>
    <variable name="bindingFaultVar" messageType="bpelx:RuntimeFaultMessage"/>
    <variable name="bindingFaultReply_process_OutputVariable"
              messageType="client:E0277_SAS_EBS_INResponseMessage"/>
    <variable name="remoteFaultReply_process_OutputVariable"
              messageType="client:E0277_SAS_EBS_INResponseMessage"/>
  </variables>
  <faultHandlers>
    <catch faultName="bpelx:remoteFault" faultVariable="remoteFaultVar">
      <sequence name="Sequence_2">
        <assign name="remoteFaultAssign">
          <copy>
            <from variable="remoteFaultVar" part="summary"/>
            <to variable="remoteFaultReply_process_OutputVariable"
                part="payload"
                query="/client:E0277_SAS_EBS_INProcessResponse/client:result"/>
          </copy>
        </assign>
        <reply name="remoteFaultReply" partnerLink="client"
               portType="client:XXOMPIPBPELPROCESS" operation="process"
               variable="remoteFaultReply_process_OutputVariable"
               faultName="client:faultMessage"/>
      </sequence>
    </catch>
    <catch faultName="bpelx:bindingFault" faultVariable="bindingFaultVar">
      <sequence name="Sequence_1">
        <assign name="bindingFaultAssign">
          <copy>
            <from variable="bindingFaultVar" part="summary"/>
            <to variable="bindingFaultReply_process_OutputVariable"
                part="payload"
                query="/client:E0277_SAS_EBS_INProcessResponse/client:result"/>
          </copy>
        </assign>
        <reply name="bindingFaultReply" partnerLink="client"
               portType="client:XXOMPIPBPELPROCESS" operation="process"
               variable="bindingFaultReply_process_OutputVariable"
               faultName="client:faultMessage"/>
      </sequence>
    </catch>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">
    <!-- Receive input from requestor. (Note: This maps to operation defined in XXOMPIPBPELPROCESS.wsdl) -->
    <receive name="receiveInput" partnerLink="client"
             portType="client:XXOMPIPBPELPROCESS" operation="process"
             variable="inputVariable" createInstance="yes"/>
    <!-- Generate reply to synchronous request -->
    <assign name="Transform_IN">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:processXSLT('Transformation_IN.xsl',bpws:getVariableData('inputVariable','payload'))"/>
        <to variable="GetPIPStatus_DBPIPItemStatus_InputVariable"
            part="InputParameters"/>
      </copy>
    </assign>
    <invoke name="GetPIPStatus" partnerLink="DBPIPItemStatus"
            portType="ns1:DBPIPItemStatus_ptt" operation="DBPIPItemStatus"
            inputVariable="GetPIPStatus_DBPIPItemStatus_InputVariable"
            outputVariable="GetPIPStatus_DBPIPItemStatus_OutputVariable"/>
    <assign name="AssignPIPStatus">
      <copy>
        <from variable="GetPIPStatus_DBPIPItemStatus_OutputVariable"
              part="OutputParameters"
              query="/ns2:OutputParameters/P_STATUS_FLAG"/>
        <to variable="outputVariable" part="payload"
            query="/client:E0277_SAS_EBS_INProcessResponse/client:result"/>
      </copy>
    </assign>
    <reply name="replyOutput" partnerLink="client"
           portType="client:XXOMPIPBPELPROCESS" operation="process"
           variable="outputVariable"/>
  </sequence>
</process>
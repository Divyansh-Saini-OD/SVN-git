<process name="ModifyTDSErrorLogDetailsABCS"
               targetNamespace="http://www.Officedepot.com/TDS/ModifyTDSErrorLogDetails/ModifyTDSErrorLogDetailsABCS"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://www.Officedepot.com/TDS/ModifyTDSErrorLogDetails/ModifyTDSErrorLogDetailsABCS"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/TDS/ModifyTDSErrorLogDetails/ReadErrorDetailsFromDBTable"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/TDS/ModifyTDSErrorLogDetails/UpdateTDSErrorLogEntries"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/jms/TDS/ModifyTDSErrorLogDetails/CommonErrorLoggingService"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:ns5="http://xmlns.oracle.com/pcbpel/adapter/db/top/ReadErrorDetailsFromDBTable"
         xmlns:ns4="http://xmlns.oracle.com/pcbpel/adapter/db/top/UpdateTDSErrorLogEntries"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:ns6="http://www.officedepot.com/officedepot/ODComnErrorStructure/1.0">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="ReadErrorDetailsFromDBTable"
                 partnerLinkType="ns1:ReadErrorDetailsFromDBTable_plt"
                 myRole="ReadErrorDetailsFromDBTable_role"/>
    <partnerLink name="UpdateTDSErrorLogEntries"
                 partnerLinkType="ns2:UpdateTDSErrorLogEntries_plt"
                 partnerRole="UpdateTDSErrorLogEntries_role"/>
    <partnerLink name="CommonErrorLoggingService"
                 partnerLinkType="ns3:Produce_Message_plt"
                 partnerRole="Produce_Message_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="updateErrorLoggingTDSEntries_update_InputVariable"
              messageType="ns2:XxcomErrorLogCollection_msg"/>
    <variable name="InvokeCommonErrorLoggerToSendErrorDataInput"
              messageType="ns3:Produce_Message_msg"/>
    <variable name="inputVariable"
              messageType="ns1:XxcomErrorLogCollection_msg"/>
  </variables>
  <faultHandlers>
    <catchAll>
      <sequence name="Sequence1">
    <assign name="AssignPopulateCommonErrorLoggingData">
          <copy>
            <from expression="ora:getProcessId()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ProcessInfo/ns6:ProcessName"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('ERROR_TYPE')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorType"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('ERROR_SEVERITY')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorSeverity"/>
          </copy>
          <copy>
            <from expression="ora:getFaultAsString()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorText"/>
          </copy>
          <copy>
            <from expression="ora:getCurrentDateTime()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorDateTime"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('CATCH_ALL_PROCESS_STEP')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ProcessStep"/>
          </copy>
          <copy>
            <from expression="ora:getFaultName()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorCode"/>
          </copy>
          <copy>
            <from expression="ora:getDomainId()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ProcessInfo/ns6:Domain"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageID"/>
          </copy>
          <copy>
            <from expression="ora:getCurrentDateTime()"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageDateTime"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_TYPE')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageType"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_VERSION')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageVersion"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_OPERATION')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageOperation"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('SOURCE_SYSTEM_NAME')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:MessageDetails/ns6:MessageSourceSystem"/>
          </copy>
          <copy>
            <from expression="concat(ora:getPreference('ERROR_DESCRIPTION_TEXT'),bpws:getVariableData('inputVariable','XxcomErrorLogCollection','/ns5:XxcomErrorLogCollection/ns5:XxcomErrorLog/ns5:errorLogId'))"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ErrorDetails/ns6:ErrorDescription"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('SOA_ADMIN')"/>
            <to variable="InvokeCommonErrorLoggerToSendErrorDataInput"
                part="body"
                query="/ns6:ODComnErrorStructure/ns6:ODComnErrorStructureList/ns6:ProcessInfo/ns6:SystemName"/>
          </copy>
        </assign>
        <invoke name="InvokeCommonErrorLoggerToSendErrorData"
                bpelx:invokeAsDetail="no"
                inputVariable="InvokeCommonErrorLoggerToSendErrorDataInput"
                partnerLink="CommonErrorLoggingService"
                portType="ns3:Produce_Message_ptt" operation="Produce_Message"/>
      </sequence>
    </catchAll>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ModifyTDSErrorLogDetailsABCS.wsdl) -->
    <receive name="receiveInput" partnerLink="ReadErrorDetailsFromDBTable"
             portType="ns1:ReadErrorDetailsFromDBTable_ptt" operation="receive" variable="inputVariable" createInstance="yes"/>
    <assign name="ChangeValuesToBeUpdated">
      <copy>
        <from expression="ora:getPreference('SYSTEM_NAME')"/>
        <to variable="updateErrorLoggingTDSEntries_update_InputVariable"
            part="XxcomErrorLogCollection"
            query="/ns4:XxcomErrorLogCollection/ns4:XxcomErrorLog/ns4:systemName"/>
      </copy>
      <copy>
        <from variable="inputVariable" part="XxcomErrorLogCollection"
              query="/ns5:XxcomErrorLogCollection/ns5:XxcomErrorLog/ns5:errorLogId"/>
        <to variable="updateErrorLoggingTDSEntries_update_InputVariable"
            part="XxcomErrorLogCollection"
            query="/ns4:XxcomErrorLogCollection/ns4:XxcomErrorLog/ns4:errorLogId"/>
      </copy>
      <copy>
        <from expression="ora:getPreference('NOTIFICATION_FLAG_UPDATE_VALUE')"/>
        <to variable="updateErrorLoggingTDSEntries_update_InputVariable"
            part="XxcomErrorLogCollection"
            query="/ns4:XxcomErrorLogCollection/ns4:XxcomErrorLog/ns4:notificationFlag"/>
      </copy>
    </assign>
    <invoke name="updateErrorLoggingTDSEntries" bpelx:invokeAsDetail="no"
            inputVariable="updateErrorLoggingTDSEntries_update_InputVariable"
            partnerLink="UpdateTDSErrorLogEntries"
            portType="ns2:UpdateTDSErrorLogEntries_ptt" operation="update"/>
  </sequence>
</process>
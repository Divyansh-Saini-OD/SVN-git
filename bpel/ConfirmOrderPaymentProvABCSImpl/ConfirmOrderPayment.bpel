<process name="ConfirmOrderPayment"
               targetNamespace="http://xmlns.officedepot.com/TDS/ConfirmOrderPaymentProvABCSImpl/ConfirmOrderPayment"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.officedepot.com/TDS/ConfirmOrderPaymentProvABCSImpl/ConfirmOrderPayment"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/apps/TDS/ConfirmOrderPaymentProvABCSImpl/UpdateOrderPaymentConfirmationService"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/jms/TDS/ConfirmOrderPaymentProvABCSImpl/CommonErrorLoggingService"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns3="http://www.officedepot.com/officedepot/ODComnErrorStructure/1.0"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ns5="http://www.officedepot.com/TDS/ConfirmOrderPaymentProvABCSImpl/OrderPaymentConfirmationEBM"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ns4="http://xmlns.oracle.com/pcbpel/adapter/db/APPS/XX_CS_TDS_PARTS_POS_PKG/MAIN/"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="ConfirmOrderPaymentImplService" partnerLinkType="client:ConfirmOrderPayment" myRole="ConfirmOrderPaymentProvider"/>
    <partnerLink name="UpdateOrderPaymentConfirmationService"
                 partnerLinkType="ns1:UpdateOrderPaymentConfirmationService_plt"
                 partnerRole="UpdateOrderPaymentConfirmationService_role"/>
    <partnerLink name="CommonErrorLoggingService"
                 partnerLinkType="ns2:Produce_Message_plt"
                 partnerRole="Produce_Message_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:ConfirmOrderPaymentRequestMessage"/>
    <variable name="invokeUpdateOrderPaymentConfServiceInput"
              messageType="ns1:args_in_msg"/>
    <variable name="invokeUpdateOrderPaymentConfServiceOutput"
              messageType="ns1:args_out_msg"/>
    <variable name="invokeCommonErrorLoggerInputData"
              messageType="ns2:Produce_Message_msg"/>
  </variables>
  <faultHandlers>
    <catchAll>
      <sequence name="SequenceCatchAll">
        <assign name="AssignPopulateCommonErrorLoggingData">
          <copy>
            <from expression="ora:getProcessId()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:ProcessName"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('ERROR_TYPE')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorType"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('ERROR_SEVERITY')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorSeverity"/>
          </copy>
          <copy>
            <from expression="ora:getFaultAsString()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorText"/>
          </copy>
          <copy>
            <from expression="ora:getContentAsString(bpws:getVariableData('inputVariable','payload','/ns5:OrderPaymentConfirmationEBM'))"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessagePayload"/>
          </copy>
          <copy>
            <from expression="ora:getCurrentDateTime()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorDateTime"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('CATCH_ALL_PROCESS_STEP')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ProcessStep"/>
          </copy>
          <copy>
            <from expression="ora:getFaultName()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorCode"/>
          </copy>
          <copy>
            <from expression="ora:getDomainId()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:Domain"/>
          </copy>
          <copy>
            <from expression="ora:getCompositeInstanceId()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageID"/>
          </copy>
          <copy>
            <from expression="ora:getCurrentDateTime()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageDateTime"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_TYPE')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageType"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_VERSION')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageVersion"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('MESSAGE_OPERATION')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageOperation"/>
          </copy>
          <copy>
            <from expression="ora:getPreference('SOURCE_SYSTEM_NAME')"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:MessageDetails/ns3:MessageSourceSystem"/>
          </copy>
          <copy>
            <from expression="concat(ora:getPreference('ERROR_DESCRIPTION_TEXT'),bpws:getVariableData('inputVariable','payload','/ns5:OrderPaymentConfirmationEBM/ns5:OrderPaymentConfirmationEBO/ns5:ServiceRequestNumber'))"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ErrorDetails/ns3:ErrorDescription"/>
          </copy>
          <copy>
            <from expression="ora:getProcessURL()"/>
            <to variable="invokeCommonErrorLoggerInputData" part="body"
                query="/ns3:ODComnErrorStructure/ns3:ODComnErrorStructureList/ns3:ProcessInfo/ns3:SystemName"/>
          </copy>
        </assign>
        <invoke name="InvokeCommonErrorLoggerToSendErrorData"
                inputVariable="invokeCommonErrorLoggerInputData"
                partnerLink="CommonErrorLoggingService"
                portType="ns2:Produce_Message_ptt" operation="Produce_Message"
                bpelx:invokeAsDetail="no"/>
      </sequence>
    </catchAll>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ConfirmOrderPayment.wsdl) -->
    <receive name="ReceiveOrderPaymentDetails" partnerLink="ConfirmOrderPaymentImplService" portType="client:ConfirmOrderPayment" operation="confirmOrderPayment" variable="inputVariable" createInstance="yes"/>
    <assign name="TransformOrderPaymentConfEBMToABMFormat">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/TransformOrderPaymentConfEBMToABMFormat.xsl', $inputVariable.payload)"/>
        <to variable="invokeUpdateOrderPaymentConfServiceInput"
            part="InputParameters"/>
      </copy>
    </assign>
    <invoke name="InvokeUpdateOrderPaymentConfService"
            bpelx:invokeAsDetail="no"
            inputVariable="invokeUpdateOrderPaymentConfServiceInput"
            outputVariable="invokeUpdateOrderPaymentConfServiceOutput"
            partnerLink="UpdateOrderPaymentConfirmationService"
            portType="ns1:UpdateOrderPaymentConfirmationService_ptt"
            operation="UpdateOrderPaymentConfirmationService"/>
  </sequence>
</process>
    s_action VARCHAR2(10);
  BEGIN 
    IF DELETING THEN
      s_action := 'DELETED';
    ELSE
      s_action := 'UPDATED';
    END IF;

    INSERT INTO XX_FIN_TRANSLATEDEF_H
      (STATUS
      ,STATUS_CHANGED_BY
      ,STATUS_DATE
      ,TRANSLATE_ID
      ,TRANSLATION_NAME
      ,SOURCE_SYSTEM
      ,TARGET_SYSTEM
      ,PURPOSE

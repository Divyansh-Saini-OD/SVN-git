      ,TARGET_FIELD1
      ,TARGET_FIELD2
      ,TARGET_FIELD3
      ,TARGET_FIELD4
      ,TARGET_FIELD5
      ,TARGET_FIELD6
      ,TARGET_FIELD7
      ,TARGET_FIELD8
      ,TARGET_FIELD9
      ,TARGET_FIELD10
      ,TARGET_FIELD11
      ,TARGET_FIELD12
      ,TARGET_FIELD13
      ,TARGET_FIELD14
      ,TARGET_FIELD15
      ,TARGET_FIELD16
      ,TARGET_FIELD17
      ,TARGET_FIELD18
      ,TARGET_FIELD19
      ,TARGET_FIELD20
      ,CREATION_DATE
      ,CREATED_BY
      ,LAST_UPDATE_DATE
      ,LAST_UPDATED_BY
      ,LAST_UPDATE_LOGIN
      ,START_DATE_ACTIVE
      ,END_DATE_ACTIVE
      ,ENABLED_FLAG
    ) VALUES (
       s_action
      ,FND_GLOBAL.USER_ID
      ,SYSDATE
      ,:OLD.TRANSLATE_ID
      ,:OLD.TRANSLATION_NAME
      ,:OLD.SOURCE_SYSTEM
      ,:OLD.TARGET_SYSTEM
      ,:OLD.PURPOSE
      ,:OLD.TRANSLATE_DESCRIPTION
      ,:OLD.RELATED_MODULE
      ,:OLD.SOURCE_FIELD1
      ,:OLD.SOURCE_FIELD2

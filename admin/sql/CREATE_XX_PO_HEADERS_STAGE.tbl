SET VERIFY   OFF
SET TERM     ON
SET FEEDBACK OFF
SET SHOW     OFF
SET ECHO     OFF
SET TAB      OFF

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Dropping Existing Custom Tables......
PROMPT

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Dropping Table XXMER.XX_PO_HEADERS_STAGE
PROMPT

DROP TABLE XXMER.XX_PO_HEADERS_STAGE;

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Dropping SYNONYM XX_PO_HEADERS_STAGE in APPS
PROMPT

DROP SYNONYM XX_PO_HEADERS_STAGE;

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Creating the Custom Table XX_PO_HEADERS_STAGE......
PROMPT

CREATE TABLE XXMER.XX_PO_HEADERS_STAGE (
  					HEADER_SEQUENCE_ID 		NUMBER			NOT NULL,
  					VALIDATE_THREAD_ID		NUMBER,
  					REQUEST_ID			NUMBER,
  					TOTAL_PO_LINES		  	NUMBER,  
  					LEGACY_SUPPLIER_NO		NUMBER			NOT NULL,
 					LEGACY_LOCATION_ID		NUMBER			NOT NULL,
  					PO_SOURCE			VARCHAR2(20),
  					STATUS_CODE			VARCHAR2(20),
  					ERROR_MESSAGE			VARCHAR2(1000),
  					ORG_ID				NUMBER,
  					SET_OF_BOOKS_ID			NUMBER,
  					SHIP_TO_LOCATION_ID		NUMBER,
  					CURRENCY_CODE			VARCHAR2(15),
  					RATE_TYPE			VARCHAR2(30),
  					RATE_DATE			DATE,
  					VENDOR_ID			NUMBER,
  					VENDOR_SITE_ID			NUMBER,
  					APPROVAL_STATUS			VARCHAR2(30),
  					BATCH_ID			NUMBER,
  					AGENT_ID			NUMBER,
  					BATCH_NO	    		NUMBER,
  					ATTRIBUTE_CATEGORY		VARCHAR2(20),
  					ATTRIBUTE6 			VARCHAR2(150),
  					ATTRIBUTE7			VARCHAR2(150),
  					ATTRIBUTE8			VARCHAR2(150),
  					ATTRIBUTE9			VARCHAR2(150),
  					COMMENTS			VARCHAR2(480),
  					CREATION_DATE		    	DATE			NOT NULL,
  					CREATED_BY		    	NUMBER			NOT NULL,
  					LAST_UPDATE_DATE	    	DATE			NOT NULL,
  					LAST_UPDATED_BY			NUMBER			NOT NULL
                                       );

PROMPT
PROMPT Creating Index XX_PO_HEADERS_STAGE_I1...
PROMPT

WHENEVER SQLERROR CONTINUE

CREATE  INDEX XXMER.XX_PO_HEADERS_STAGE_I1 ON XXMER.XX_PO_HEADERS_STAGE
	(HEADER_SEQUENCE_ID);

PROMPT
PROMPT Creating Synonym in APPS...
PROMPT

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Creating SYNONYM XX_PO_HEADERS_STAGE
PROMPT

CREATE OR REPLACE SYNONYM XX_PO_HEADERS_STAGE FOR XXMER.XX_PO_HEADERS_STAGE ;

WHENEVER SQLERROR CONTINUE

PROMPT
PROMPT Exiting....
PROMPT

SET FEEDBACK ON


EXIT;


